{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux-debug",
            "displayName": "Linux Debug (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/linux-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_DEMO": "ON",
                "WINDOWS_GUI_SUBSYSTEM": "OFF"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/linux-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_DEMO": "ON",
                "WINDOWS_GUI_SUBSYSTEM": "OFF"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}\\out\\build\\windows-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_DEMO": "ON",
                "WINDOWS_GUI_SUBSYSTEM": "ON"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}\\out\\build\\windows-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_DEMO": "ON",
                "WINDOWS_GUI_SUBSYSTEM": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release"
        }
    ]
}