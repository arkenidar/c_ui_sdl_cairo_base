{
    "configurations": [
        {
            // https://marketplace.visualstudio.com/items?itemName=tomblind.local-lua-debugger-vscode
            "name": "demo.lua BUNDLED EXE",
            "request": "launch",
            "type": "lua-local",
            "program": {
                "lua": "${workspaceFolder}/windows-os/luajit-mwindows.exe",
                "file": "${workspaceFolder}/demo.lua"
            },
            "env": {
                "PATH": "${env:PATH};${workspaceFolder}/cairo-ui--exe-distribution"
            },
            "stopOnEntry": false
        },
        {
            "name": "Debug C Application (CMake)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/cairo-imgui-demo.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:\\msys64\\mingw64\\bin;${env:PATH};${workspaceFolder}\\cairo-ui--exe-distribution"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "c:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build Debug"
        },
        {
            "name": "Debug C Application (MSVC)",
            "type": "cppvsdbg",
